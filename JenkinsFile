pipeline {
    agent any
    
    tools{
    maven 'Maven'
    }
    
    stages {
      stage('clean')
            {
                steps
                 { 
                    sh 'mvn clean install'
                 }
            }
        stage("build & SonarQube analysis") {
            steps {
              withSonarQubeEnv('SonarQube') {
                sh 'mvn sonar:sonar'
              }
            } 
        }
        stage('deploy'){
            steps{      
               deploy adapters: [tomcat8(credentialsId: 'TomcatUser', path: '', url: 'http://ec2-3-19-211-198.us-east-2.compute.amazonaws.com:8090/')], contextPath: '3.19.211.198', war: 'target/WarDemo.war'
               }
                 }
     }
}
