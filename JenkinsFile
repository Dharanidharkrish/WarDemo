pipeline {
    agent any
    
    tools{
    maven 'Maven'
    }
    
    stages {
      stage('clean')
            {
                steps
                 { 
                    sh 'mvn clean install'
                 }
            }
        stage("build & SonarQube analysis") {
            steps {
              withSonarQubeEnv('SonarQube') {
                sh 'mvn sonar:sonar'
              }
            } 
        }
        stage('deploy'){
            steps{      
             deploy adapters: [tomcat8(credentialsId: 'TomcatUser', path: '', url: 'http://3.19.211.198:8090')], contextPath: 'WarDemo', onFailure: false, war: '**/*.war'
             }
                 }
     }
}
