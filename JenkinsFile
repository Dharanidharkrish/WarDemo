pipeline {
    agent any
    
    tools{
    maven 'Maven'
    }
    
    stages {
      stage('clean')
            {
                steps
                 { 
                    sh 'mvn clean install'
                 }
            }
        stage("build & SonarQube analysis") {
            steps {
              withSonarQubeEnv('SonarQube') {
                sh 'mvn sonar:sonar'
              }
            } 
        }
        stage('deploy'){
            steps{      
                deploy adapters: [tomcat8(credentialsId: 'TOMCAT_USER', path: '', url: 'http://18.224.182.140:8090/')], contextPath: '/SampleWebApp', war: 'target/WarDemo.war'
                    }
                 }
     }
}
